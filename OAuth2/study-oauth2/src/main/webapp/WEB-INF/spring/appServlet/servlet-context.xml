		<beans:constructor-arg name="clientSecret" value="2cxhZW_Uq8"></beans:constructor-arg>
		<beans:constructor-arg name="redirectUrl" value="http://localhost:8080/auth/naver/callback"></beans:constructor-arg>
	</beans:bean>
	
	<context:component-scan base-package="com.oauth2.study" />
</beans:beans>
